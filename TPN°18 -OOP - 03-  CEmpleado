#include <bits/stdc++.h>
using namespace std;

class CEmpleado {
private:
    string nombre;
    int añoIngreso;
    float salario;
    string direccion;

public:

    CEmpleado(string n, int y, float s, string addr) {
        nombre = n;
        añoIngreso = y;
        salario = s;
        direccion = addr;
    }

    void mostrarInfo() {
        cout << "Nombre: " << nombre << endl;
        cout << "Año de ingreso: " << añoIngreso << endl;
        cout << "Salario: $" << salario << endl;
        cout << "Dirección: " << direccion << endl;
    }

    bool viveEnWallStreet() {
        return direccion.find("Wall Street") != string::npos;
    }
};

int main() {
    string nombre, direccion;
    int añoIngreso;
    float salario;

    cout << "Introduce el nombre del empleado: ";
    getline(cin, nombre);
    cout << "Introduce el año de ingreso: ";
    cin >> añoIngreso;
    cout << "Introduce el salario: $";
    cin >> salario;
    cin.ignore(); 
    cout << "Introduce la dirección: ";
    getline(cin, direccion);

    CEmpleado empleado(nombre, añoIngreso, salario, direccion);

    empleado.mostrarInfo();

    bool viveEnWallStreet = empleado.viveEnWallStreet();
    if (viveEnWallStreet) {
        cout << "El empleado vive en Wall Street." << endl;
    } 
    if (viveEnWallStreet == false) {
        cout << "El empleado no vive en Wall Street." << endl;
    }
}
